{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@underdog/core": ["../../packages/core/src"],
      "@underdog/core/*": ["../../packages/core/src/*"],
      "@underdog/database": ["../../packages/database/src"],
      "@underdog/database/*": ["../../packages/database/src/*"],
      "@underdog/auth": ["../../packages/auth/src"],
      "@underdog/auth/*": ["../../packages/auth/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
