{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@underdog/core": ["packages/core/src"],
      "@underdog/core/*": ["packages/core/src/*"],
      "@underdog/database": ["packages/database/src"],
      "@underdog/database/*": ["packages/database/src/*"],
      "@underdog/auth": ["packages/auth/src"],
      "@underdog/auth/*": ["packages/auth/src/*"],
      "@underdog/voice": ["packages/voice/src"],
      "@underdog/voice/*": ["packages/voice/src/*"],
      "@underdog/ai-engine": ["packages/ai-engine/src"],
      "@underdog/ai-engine/*": ["packages/ai-engine/src/*"],
      "@underdog/conversation": ["packages/conversation/src"],
      "@underdog/conversation/*": ["packages/conversation/src/*"],
      "@underdog/curriculum": ["packages/curriculum/src"],
      "@underdog/curriculum/*": ["packages/curriculum/src/*"],
      "@underdog/objections": ["packages/objections/src"],
      "@underdog/objections/*": ["packages/objections/src/*"],
      "@underdog/analytics": ["packages/analytics/src"],
      "@underdog/analytics/*": ["packages/analytics/src/*"],
      "@underdog/feedback": ["packages/feedback/src"],
      "@underdog/feedback/*": ["packages/feedback/src/*"],
      "@underdog/scoring": ["packages/scoring/src"],
      "@underdog/scoring/*": ["packages/scoring/src/*"],
      "@underdog/recordings": ["packages/recordings/src"],
      "@underdog/recordings/*": ["packages/recordings/src/*"],
      "@underdog/transcription": ["packages/transcription/src"],
      "@underdog/transcription/*": ["packages/transcription/src/*"],
      "@underdog/admin": ["packages/admin/src"],
      "@underdog/admin/*": ["packages/admin/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
